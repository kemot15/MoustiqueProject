@model Moustique.Models.ViewModels.EmailViewModel
@{
    ViewBag.Title = "Kontakt";
}
<div class="tm-row">
    <div class="tm-col-left"></div>
    <main class="tm-col-right tm-contact-main">
        <!-- Content -->
        <section class="tm-content tm-contact">
            <h2 class="mb-4 tm-content-title">Kontakt</h2>
            <a href="tel:+48691153315"><i class="fa fa-phone-square"></i> +48 691 153 315</a><br />
            <a href="tel:+48693338241"><i class="fa fa-phone-square"></i> +48 693 338 241</a><br />
            <a href="mailto:biuro@polowanienakomary.pl"><i class="fa fa-envelope-square"></i> biuro@polowanienakomary.pl</a><br />
            <a href="https://www.facebook.com/Polowanie-na-komary-101336018347041/" target="_blank"><i class="fa fa-facebook-square"></i> Polowanie na komary</a><br /><br />
            <form method="post">
                <div class="form-group mb-4">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Imię" required="" />
                </div>
                <div class="form-group mb-4">
                    <input asp-for="Email" type="email" class="form-control" placeholder="E-mail" required="" />
                </div>
                <div class="form-group mb-4">
                    <input asp-for="Phone" type="number" class="form-control" placeholder="Numer telefonu" required="" />
                </div>
                <div class="form-group mb-5">
                    <textarea asp-for="Message" rows="6" class="form-control" placeholder="Wiadomość..." required=""></textarea>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-big btn-primary" id="email-button">Wyślij</button>
                </div>
            </form>
        </section>

    </main>
</div>
<script src="~/js/contact.js" type="text/javascript"></script>